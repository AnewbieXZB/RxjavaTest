<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>
    <RadioGroup
        android:id="@+id/tab_rg_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/tab_rb_1"
            style="@style/tab_rb_style"
            android:checked="true"
            android:drawableTop="@drawable/news_selector"
            android:text="@string/news_text"
             />
        <RadioButton
            android:id="@+id/tab_rb_2"
            style="@style/tab_rb_style"
            android:checked="true"
            android:drawableTop="@drawable/faxian_selector"
            android:text="@string/faxian"
            />
        <RadioButton
            android:id="@+id/tab_rb_3"
            style="@style/tab_rb_style"
            android:checked="true"
            android:drawableTop="@drawable/shopcar_selector"
            android:text="@string/shopcar"
            />
        <RadioButton
            android:id="@+id/tab_rb_4"
            style="@style/tab_rb_style"
            android:checked="true"
            android:drawableTop="@drawable/me_selector"
            android:text="@string/me"
            />
    </RadioGroup>
    <android.support.v4.app.FragmentTabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <FrameLayout
            android:id="@+id/tab_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            >
        </FrameLayout>
    </android.support.v4.app.FragmentTabHost>
</LinearLayout>